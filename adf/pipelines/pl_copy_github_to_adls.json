{
  "name": "pl_copy_github_to_adls",
  "properties": {
    "activities": [
      {
        "name": "ForEach_Files",
        "type": "ForEach",
        "dependsOn": [],
        "userProperties": [],
        "typeProperties": {
          "items": "@pipeline().parameters.pFiles",
          "activities": [
            {
              "name": "Copy_HTTP_to_ADLS",
              "type": "Copy",
              "dependsOn": [],
              "policy": {
                "timeout": "7.00:00:00",
                "retry": 0,
                "retryIntervalInSeconds": 30,
                "secureOutput": false,
                "secureInput": false
              },
              "userProperties": [],
              "typeProperties": {
                "source": {
                  "type": "DelimitedTextSource",
                  "storeSettings": {
                    "type": "HttpReadSettings"
                  }
                },
                "sink": {
                  "type": "BinarySink",
                  "storeSettings": {
                    "type": "AzureBlobFSWriteSettings"
                  }
                }
              },
              "inputs": [
                {
                  "referenceName": "ds_http_github_csv",
                  "type": "DatasetReference",
                  "parameters": {
                    "pOwner": "@pipeline().parameters.pOwner",
                    "pRepo": "@pipeline().parameters.pRepo",
                    "pBranch": "@pipeline().parameters.pBranch",
                    "pPath": "data/",
                    "pFile": "@item()"
                  }
                }
              ],
              "outputs": [
                {
                  "referenceName": "ds_adls_binary",
                  "type": "DatasetReference",
                  "parameters": {
                    "fileSystem": "@pipeline().parameters.pAdlsContainer",
                    "directory": "@pipeline().parameters.pAdlsDirectory",
                    "fileName": "@item()"
                  }
                }
              ]
            }
          ]
        }
      }
    ],
    "parameters": {
      "pOwner": {
        "type": "string"
      },
      "pRepo": {
        "type": "string"
      },
      "pBranch": {
        "type": "string"
      },
      "pFiles": {
        "type": "array"
      },
      "pAdlsContainer": {
        "type": "string"
      },
      "pAdlsDirectory": {
        "type": "string"
      }
    },
    "annotations": []
  },
  "type": "Microsoft.DataFactory/factories/pipelines"
}